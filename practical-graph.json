{
  "app_path": "/path/to/your/app",
  "folder_groups": {
    "core": ["navigation", "state", "auth", "database"],
    "features": ["event", "discovery", "profile"],
    "api": ["endpoints"],
    "lib": ["supabase"]
  },
  "docs": {
    "business": "/docs/business-rules.md",
    "event": "/docs/event-system.md"
  },
  "watchdog": {
    "debounce_interval": 5,
    "batch_size": 10,
    "min_change_threshold": 3
  },
  "event_types": ["created", "modified", "deleted"],
  "critical_paths": ["/path/to/critical/file"],
  "max_batch_time": 5,
  "mcpServers": {
    "practical-graph": {
      "command": "docker",
      "args": [
        "run",
        "-v",
        "/Users/Thy/Today:/path/to/your/app",
        "-i",
        "practical-graph"
      ]
    }
  }
}
